{
    "name": "kseven/codecms",
    "type": "project",
    "description": "Simples cms basic√£o com recursos codeigniter 4.",
    "homepage": "https://kseven.dev.br",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4 || ^8.0",
        "codeigniter4/framework": "^4.0",
        "codeigniter4/translations": "^4.2",
        "codeigniter4/shield": "^1.0@beta",
        "phpmailer/phpmailer": "^6.8"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^9.1"
    },
    "suggest": {
        "ext-fileinfo": "Improves mime type detection for files"
    },
    "config": {
        "vendor-dir": "core/vendor",
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Support\\": "tests/_support"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "support": {
        "forum": "https://forum.kseven.dev.br/",
        "source": "https://kseven.dev.br/klicense",
        "slack": "https://klicense.slack.com"
    }
}
